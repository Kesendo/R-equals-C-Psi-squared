# EditorConfig - https://editorconfig.org
# Prevents encoding disasters when Claude generates content

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
charset = utf-8
trim_trailing_whitespace = false

[*.{bat,cmd,ps1}]
end_of_line = crlf
